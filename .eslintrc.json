{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "eslint: all"
    ],
    "overrides": [
        {
            "files": [
                "bin/*.js",
                "lib/*.js"
            ],
            "excludedFiles": "*.test.js",
            "rules": {
                "quotes": [
                    "error",
                    "single"
                ]
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "rules": {
        "react/no-set-state": "off",
        // enable additional rules
        "quotes": [
            "error",
            "double"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ],
        // override configuration set by extending "eslint:recommended"
        "no-empty": "warn",
        // disable rules from base configurations
        "for-direction": "off",
        // override default options
        "comma-dangle": [
            "error",
            "always"
        ],
        "indent": [
            "error",
            2
        ],
        "no-cond-assign": [
            "error",
            "always"
        ],
        // disable now, but enable in the future
        "one-var": "off", // ["error", "never"]
        // disable
        "init-declarations": "off",
        "no-console": "off",
        "no-inline-comments": "off"
    }
}